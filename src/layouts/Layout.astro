---
export interface Props {
	title?: string;
}

const { title = "BarBorja" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<aside>
			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/carta">Carta</a></li>
					<li><a href="/adomicilio">A Domicilio</a></li>
					<li><a href="/admin">Admin</a></li>
				</ul>
			</nav>
		</aside>
		<main>
			<slot />
		</main>
	</body>
</html>

<style>
    aside {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        height: 100vh;
        background-color: #2c3e50;
        padding: 0;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
        z-index: 1000;
    }
    
    nav {
        width: 100%;
        height: 100%;
        padding: 20px 0;
    }
    
    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        width: 100%;
    }
    
    nav li {
        width: 100%;
    }
    
    nav a {
        display: block;
        width: 100%;
        padding: 15px 20px;
        color: #ecf0f1;
        text-decoration: none;
        border-bottom: 1px solid #34495e;
        transition: background-color 0.3s ease;
        box-sizing: border-box;
    }
    
    nav a:hover {
        background-color: #34495e;
        color: #ffffff;
    }
    
    main {
        margin-left: 200px;
        padding: 20px;
        min-height: 100vh;
        box-sizing: border-box;
    }
    
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: Arial, sans-serif;
    }
